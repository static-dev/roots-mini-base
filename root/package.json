{
  "name": "<%= S(name).slugify().value() %>",
  "description": "<%= description %>",
  "version": "0.0.1",
  "author": "<%= github_username %>",
  "ava": {
    "verbose": "true"
  },
  "bugs": "https://github.com/<%= github_username %>/<%= S(name).slugify().value() %>/issues",
  "dependencies": {
    "babel-preset-es2015": "6.x",
    "babel-preset-stage-2": "6.x",
    "lost": "6.x",
    "postcss-cssnext": "2.5.x",
    "rucksack-css": "0.8.x",
    "sugarss": "0.1.x"
  },
  "devDependencies": {
    "ava": "0.14.x",
    <% if (hosting === true) %>"netlify-cli": "*",%>
    "rimraf": "2.5.x",
    "snazzy": "3.0.x",
    "spike-core": "0.3.x",
    "standard": "7.x"
  },
  "homepage": "https://github.com/<%= github_username %>/<%= S(name).slugify().value() %>",
  "main": "app.js",
  "private": "true",
  "repository": "https://github.com/<%= github_username %>/<%= S(name).slugify().value() %>",
  "scripts": {
    <% if (hosting === true) %>"netlify": "node_modules/.bin/netlify init",
    "deploy": "node_modules/.bin/netlify deploy",%>
    "lint": "standard --verbose | snazzy",
    "precommit": "npm run lint -s",
    "pretest": "npm run lint -s",
    "test": "NODE_ENV=test ava"
  }
}
